@{
    Layout = null;
}

@using OZ_HEPSIBURADA.WEBUI.Models.AccountVM;
@model RegisterVM

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!-- Start of CSS Libraries -->
    <link href="~/Areas/Admin/Assets/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Assets/Content/font-awesome.css" rel="stylesheet" />
    <!-- End of Css Libraries -->
    <title>Register</title>
    <style type="text/css">
        .validationMessage ul {
            text-decoration: none;
            list-style-type: none;
            color: red;
            padding-left: 28px;
        }
    </style>
</head>
<body>
    <div class="col-md-6 col-sm-8 col-md-offset-3 col-sm-offset-2" style="margin-top: 5%">
        <div class="panel panel-primary">
            <div class="panel-heading text-center">REGISTER</div>
            <div class="panel-body">
                <div class="row validationMessage">
                    @Html.ValidationSummary(false, "", new { @class = "row" })
                </div>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                    <div class="row" style="margin-top: 15px">
                        <div class="col-md-4 col-sm-4">
                            @Html.LabelFor(x => x.UserName)
                        </div>
                        <div class="col-md-8 col-sm-8">
                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row" style="margin-top: 15px">
                        <div class="col-md-4 col-sm-4">
                            @Html.LabelFor(x => x.FullName)
                        </div>
                        <div class="col-md-8 col-sm-8">
                            @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row" style="margin-top: 15px">
                        <div class="col-md-4 col-sm-4">
                            @Html.LabelFor(x => x.Email)
                        </div>
                        <div class="col-md-8 col-sm-8">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "email" })
                        </div>
                    </div>
                    <div class="row" style="margin-top: 15px">
                        <div class="col-md-4 col-sm-4">
                            @Html.LabelFor(x => x.Password)
                        </div>
                        <div class="col-md-8 col-sm-8">
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @type = "password" })
                        </div>
                    </div>
                    <div class="row" style="margin-top: 15px">
                        <div class="col-md-4 col-sm-4">
                            @Html.LabelFor(x => x.ConfirmPassword)
                        </div>
                        <div class="col-md-8 col-sm-8">
                            @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", @type = "password" })
                        </div>
                    </div>
                    <div class="row" style="margin-top: 15px">
                        <div class="col-md-4 col-sm-4">
                            @Html.LabelFor(x => x.PhoneNumber)
                        </div>
                        <div class="col-md-8 col-sm-8">
                            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row" style="margin-top: 15px">
                        <div class="col-md-4 col-sm-4">
                            @Html.LabelFor(x => x.DeliveryAddress)
                        </div>
                        <div class="col-md-8 col-sm-8">
                            @Html.TextBoxFor(x => x.DeliveryAddress, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row" style="margin-top: 15px">
                        <div class="col-md-4 col-sm-4">
                            @Html.LabelFor(x => x.InvoiceAddress)
                        </div>
                        <div class="col-md-8 col-sm-8">
                            @Html.TextBoxFor(x => x.InvoiceAddress, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-12 text-right" style="margin: 15px 0; padding-right: 0">
                        @Html.ActionLink("Login", "Login", "Account", null, new { @class = "btn btn-warning" })
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Start of JS Libraries -->
    <script src="~/Areas/Admin/Assets/Scripts/jquery-2.1.4.js"></script>
    <script src="~/Areas/Admin/Assets/Scripts/bootstrap.js"></script>
    <!-- End of JS Libraries -->
</body>
</html>
